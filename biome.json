{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"formatter": {
		"lineWidth": 100
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"recommended": false
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"noSwitchDeclarations": "off"
			},
			"complexity": {
				"noImportantStyles": "off"
			}
		}
	},
	"files": {
		"includes": [
			"apps/**",
			"packages/**",
			"scripts/**",
			"*.json",
			"*.ts",
			"!package.json",
			"!**/node_modules",
			"!**/dist",
			"!**/*.html",
			"!**/.wrangler"
		]
	}
}
